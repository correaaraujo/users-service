{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "sourceRoot": "./src",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@application/*": [
                "./src/application/*"
            ],
            "@domain/*": [
                "./src/domain/*"
            ],
            "@infra/*": [
                "./src/infra/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ],
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}