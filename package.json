{
    "name": "users-service",
    "version": "1.0.0",
    "main": "entry.js",
    "scripts": {
        "build": "rimraf ./dist && tsc -p ./tsconfig.json && npm run gen:swagger && npm run copy:swagger",
        "dev": "npm run gen:swagger && NODE_ENV=dev ts-node-dev -r dotenv/config -r tsconfig-paths/register --exit-child ./src/entry.ts",
        "start": "npm run gen:swagger && node ./dist/entry.js",
        "prod": "npm run gen:swagger && npm run build && npm run start",
        "gen:swagger": "ts-node swagger-gen.ts",
        "copy:swagger": "cpx 'swagger.json' './dist'",
        "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
        "test:verbose": "jest --passWithNoTests --runInBand",
        "test:unit": "npm test -- -c jest-unit-config.ts",
        "test:integration": "npm test -- -c jest-integration-config.ts",
        "test:staged": "npm test -- --findRelatedTests --watchAll=false",
        "test:ci": "npm test -- --coverage"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^27.5.1",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.34",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "eslint": "^7.32.0",
        "eslint-config-standard-with-typescript": "^21.0.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.2.0",
        "git-commit-msg-linter": "^3.2.8",
        "husky": "^4.3.8",
        "jest": "^28.1.0",
        "lint-staged": "^12.4.1",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@prisma/client": "^3.14.0",
        "@types/express": "^4.17.13",
        "celebrate": "^15.0.1",
        "docker-compose": "^0.23.17",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "joi": "^17.6.0",
        "morgan": "^1.10.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "swagger-autogen": "^2.21.2",
        "swagger-ui-express": "^4.4.0",
        "ts-node-dev": "^2.0.0",
        "tsyringe": "^4.7.0",
        "uuid": "8.3.2",
        "winston": "^3.7.2"
    }
}
